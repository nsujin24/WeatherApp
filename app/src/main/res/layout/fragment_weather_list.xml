<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_10dp"
        android:background="@drawable/search_bg"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/margin_default_10dp"
        android:hint="@string/search_city"
        android:inputType="textCapWords"
        android:padding="@dimen/margin_default_10dp"
        android:textColor="@android:color/black"
        android:elevation="@dimen/default_elevation_5dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Lists"
        android:layout_gravity="center" />

</LinearLayout>